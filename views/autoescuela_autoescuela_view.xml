<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="autoescuela_autoescuela_form_view">
            <field name="name">autoescuela.autoescuela.view.form</field>
            <field name="model">autoescuela.autoescuela</field>
            <field name="arch" type="xml">
                <form string="Formulario de Autoescuela">
                    <sheet>
                        <separator string="INFORMACIÓN GENERAL"/>
                        <group>
                            <group>
                                <field name="name" string="Nombre de la autoescuela"/>
                                <field name="domicilio"/>
                                <field name="localidad"/>
                                <field name="provincia"/>
                                <field name="contacto"/>
                            </group>
                            <group>
                                <field name="examen_ids" widget="many2many_tags" string="Exámenes"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="alumno_ids" widget="many2many_tags" string="Alumnos matriculados" readonly="1"/>
                            </group>
                            <group>
                                <field name="profesor_ids" widget="many2many_tags" string="Profesores asignados" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>