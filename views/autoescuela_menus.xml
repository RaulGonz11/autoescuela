                  action="autoescuela_autoescuela_action_window"/>

        <menuitem name="Profesores" 
                  id="autoescuela_profesor_menu" 
                  parent="autoescuela_menu_root" 
                  action="autoescuela_profesor_action_window"/>

        <menuitem name="Alumnos" 
                  id="autoescuela_alumno_menu" 
                  parent="autoescuela_menu_root" 
                  action="autoescuela_alumno_action_window"/>

        <menuitem name="Exámenes por Alumno" 
                  id="autoescuela_examen_menu" 
                  parent="autoescuela_menu_root" 
                  action="autoescuela_examen_action_window"/>
