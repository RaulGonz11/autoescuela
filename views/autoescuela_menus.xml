<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="autoescuela_autoescuela_action_window">
            <field name="name">Autoescuelas</field>
            <field name="res_model">autoescuela.autoescuela</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="autoescuela_profesor_action_window">
            <field name="name">Profesores</field>
            <field name="res_model">autoescuela.profesor</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="autoescuela_alumno_action_window">
            <field name="name">Alumnos</field>
            <field name="res_model">autoescuela.alumno</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="autoescuela_examen_action_window">
            <field name="name">Exámenes</field>
            <field name="res_model">autoescuela.examen</field>
            <field name="view_mode">tree,form,calendar</field>
