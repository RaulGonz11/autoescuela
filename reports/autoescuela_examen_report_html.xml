<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_autoescuela_examen_html" model="ir.actions.report">
        <field name="name">Informe de Examen (Vista Web)</field>
        <field name="model">autoescuela.examen</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">autoescuela.report_examen_template_html</field>
        <field name="report_file">autoescuela.report_examen_template_html</field>
        <field name="binding_model_id" ref="model_autoescuela_examen"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_examen_template_html">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Detalle de Examen: <span t-field="o.name"/></h2>
                        <div class="row">
                            <div class="col-6">
                                <strong>Fecha: </strong><span t-field="o.fecha"/><br/>
                                <strong>Precio: </strong>
                                <t t-if="o.moneda_id">
                                    <span t-field="o.precio" t-options='{"widget": "monetary", "display_currency": o.moneda_id}'/>
                                </t>
                                <t t-else="">
                                    <span t-out="o.precio"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>