<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_autoescuela_autoescuela_html" model="ir.actions.report">
        <field name="name">Informe de Autoescuela (Vista Web)</field>
        <field name="model">autoescuela.autoescuela</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">autoescuela.report_autoescuela_template_html</field>
        <field name="report_file">autoescuela.report_autoescuela_template_html</field>
        <field name="binding_model_id" ref="model_autoescuela_autoescuela"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_autoescuela_template_html">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Sede: <span t-field="o.name"/></h2>
                        <p><strong>Localidad: </strong><span t-field="o.localidad"/></p>
                        <p><strong>Contacto: </strong><span t-field="o.contacto"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>