<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_autoescuela_profesor" model="ir.actions.report">
        <field name="name">Informe de Profesor</field>
        <field name="model">autoescuela.profesor</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">autoescuela.report_profesor_template</field>
        <field name="report_file">autoescuela.report_profesor_template</field>
        <field name="binding_model_id" ref="model_autoescuela_profesor"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_profesor_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Ficha del Profesor</h2>
                        <hr/>
                        <div class="row">
                            <div class="col-6">
                                <strong>Nombre: </strong><span t-field="o.name"/><br/>
                                <strong>DNI: </strong><span t-field="o.dni"/><br/>
                                <strong>Coche: </strong><span t-field="o.coche"/><br/>
                                <strong>Matrícula: </strong><span t-field="o.matricula"/>
                            </div>
                            <div class="col-6">
                                <strong>Autoescuela: </strong><span t-field="o.autoescuela_id.name"/><br/>
                                <strong>Fecha Incorporación: </strong><span t-field="o.incorporacion"/><br/>
                                <strong>Antigüedad: </strong><span t-field="o.antiguedad"/> años
                            </div>
                        </div>
                        <h3 class="mt-4">Alumnos Asignados</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr><th>Nombre</th><th>DNI</th><th>Matrícula</th></tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.alumno_ids" t-as="al">
                                    <td><span t-field="al.name"/></td>
                                    <td><span t-field="al.dni"/></td>
                                    <td><span t-field="al.matricula"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>